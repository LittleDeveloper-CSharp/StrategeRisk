@model IEnumerable<StrategeRisk.WebApp.Models.CompanyViewModels.CompanyRowViewModel>

@{
    ViewData["Title"] = "Companies";
    ViewData["SectionName"] = "Tools";
}

<div class="companies__container">
    <div>
    </div>
    <div>
        <table class="companies__container-table">
            <thead>
                <tr>
                    <th>
                        Company Name
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Phone
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@company.Id">
                                @company.Name
                            </a>
                        </td>
                        <td>
                            @company.City
                        </td>
                        <td>
                            @company.State
                        </td>
                        <td>
                            @company.Phone
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

